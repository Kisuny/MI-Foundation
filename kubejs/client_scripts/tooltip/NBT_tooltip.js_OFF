ItemEvents.tooltip(tooltip => {
    tooltip.addAdvanced(Ingredient.all, (item, advanced, text) => {
        if (!advanced) return
        if (!item.nbt) return

        if (tooltip.alt) text.add(Component.of('NBT: ').append(Component.prettyPrintNbt(item.nbt)))
        else text.add(Component.gold('Hold [ALT] to see NBT'))
    })
})